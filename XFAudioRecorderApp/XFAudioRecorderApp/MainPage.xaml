<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFAudioRecorderApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Grabador de audio" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button Text="Iniciar/Detener Grabación" Clicked="Button_Clicked"/>

        <Entry x:Name="txtDescripcion" Placeholder="Descriopcion del Audio" />

        <Button x:Name="saveAudio" Text="Salvar audio" Clicked="saveAudio_Clicked"/>

        <Button x:Name="btnShowAudioList" Text="Mostrar Audios" Clicked="btnShowAudioList_Clicked"/>

        <Button x:Name="btnSalir" Text="Salir" Clicked="btnSalir_Clicked"/>

    </StackLayout>

</ContentPage>
